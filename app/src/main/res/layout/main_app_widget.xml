<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:theme="@style/Theme.MoonPhase.AppWidgetContainer">

    <TextView
        android:id="@+id/wd_tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        tools:text="01.10" />

    <ImageView
        android:id="@+id/wd_img_moonPhase"
        android:layout_width="@dimen/widget_image_height"
        android:layout_height="@dimen/widget_image_height"
        android:layout_gravity="center"
        android:layout_weight="1"
        tools:srcCompat="@drawable/emoji_wanning_crescent" />

    <TextView
        android:id="@+id/wd_tv_moonPhase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        tools:text="@string/moonPhase_waningCrescent" />
</LinearLayout>